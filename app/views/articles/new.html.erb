<div class="container">


  <div class="row">
    <div class="col-md-12">

      <h1>Create a new Article</h1>

      <% if @article.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <strong>The following errors occured:</strong>
                <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
                </ul>
              </div>
            <% end %>


      <!--For displaying flash messages-->
      <% flash.each do |style, msg| %>

        <div class="alert alert-<%= style %>" role="alert">
          <%= msg %>

        </div>
      <% end %>


      <%= form_for @article, :url => {:action => "create"} do |f| %>

        <div class="form-group">
          <label for="">Title</label>
          <input type="text"
                 class="form-control" name="article[title]" id="" aria-describedby="helpId" placeholder="">
          <small id="helpId" class="form-text text-muted">Please, insert an title</small>
        </div>

        <div class="form-group">
          <label for="">Description</label>
          <textarea class="form-control" name="article[description]" id="" rows="3"></textarea>
        </div>


        <button type="submit" class="btn btn-success">Post Article</button>

      <% end %>


    </div>
  </div>


</div>





